[user]
	name = Daniel Lin
	email = ephemient@gmail.com
[core]
	pager = cat
	preloadindex = true
[color]
	ui = auto
[column]
	ui = auto
[branch]
	autosetupmerge = always
	autosetuprebase = always
	sort = committerdate
[diff]
	algorithm = histogram
	colorMoved = true
	dirstat = lines,cumulative
	mnemonicPrefix = true
	renames = true
	wordRegex = [^\\s\\w]|\\w+
	tool = kitty
	guitool = kitty.gui
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[grep]
	lineNumber = true
	patternType = extended
[init]
	defaultBranch = main
[log]
	abbrevCommit = true
	decorate = true
[merge]
	autoStash = true
	branchdesc = true
	log = true
	stat = true
[rebase]
	autoStash = true
	autoSquash = true
	stat = true
[rerere]
	enabled = true
[push]
	default = simple
[showbranch]
	default = --topo-order
	default = heads/*
[alias]
	br = branch
	brs = branch -vv
	ci = commit
	co = checkout
	lol = log --graph --pretty=oneline
	lola = log --graph --pretty=oneline --all
	ls = ls-files --exclude-standard
	pass = !pass git
	st = status
	sw = switch
	wdiff = diff --color-words
[filter "local"]
	clean = git-filter-local --clean %f
	smudge = git-filter-local --smudge %f
[credential]
	helper = cache
	helper = /usr/bin/pass-git-helper
	useHttpPath = true
[http]
	cookiefile = ~/.gitcookies
[includeIf "hasconfig:remote.*.url:https://github.com/tripadv/**"]
	path = ~/.gitconfig-ta

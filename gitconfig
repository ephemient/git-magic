[core]
	pager = cat
	preloadindex = true
[color]
	ui = auto
[column]
	ui = auto
[diff]
	algorithm = histogram
	dirstat = lines,cumulative
	mnemonicPrefix = true
	renames = true
	wordRegex = [^\\s\\w]|\\w+
	tool = kitty
	guitool = kitty.gui
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[grep]
	lineNumber = true
	patternType = extended
[log]
	abbrevCommit = true
	decorate = true
[merge]
	autoStash = true
	branchdesc = true
	log = true
	stat = true
[rebase]
	autoStash = true
	autoSquash = true
	stat = true
[rerere]
	enabled = true
[push]
	default = simple
[alias]
	br = branch
	brs = branch -vv
	ci = commit
	co = checkout
	lol = log --graph --pretty=oneline
	lola = log --graph --pretty=oneline --all
	ls = ls-files --exclude-standard
	pass = !pass git
	st = status
	wdiff = diff --color-words
[branch]
	autosetupmerge = always
	autosetuprebase = always
[showbranch]
	default = --topo-order
	default = heads/*
[filter "local"]
    	clean = git-filter-local --clean %f
    	smudge = git-filter-local --smudge %f
[credential]
	helper = cache
	helper = /usr/bin/pass-git-helper
	useHttpPath = true
[http]
	cookiefile = ~/.gitcookies
[includeIf "gitdir:ta-*/"]
	path = ~/.gitconfig-ta
